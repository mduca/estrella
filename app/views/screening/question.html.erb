<div class="row">

	<form action="" method="post">

		<div class="row row-centered">	
      <div class="col-xs-12 question">
        <h1><%=t @question %></h1>
      </div>
      </div>

      <div class="row row-centered">
      <div class="col-xs-12 options" style='margin-top:40px;margin-bottom:40px;'>

        <% @options.each do |option| %>
          <div class="radio">
            <label>
                <input required type="radio" name="answer" id="answer" value="<%= option.downcase %>">
                <%=t option %>
            </label>
          </div>
        <% end %>
      </div>
		</div>

		<div class="row row-centered">
			<div class="col-xs-5">
				<a href="#" onclick='history.back()' class="btn btn-default"><%= I18n.t(:nav_back) %> </a>
			</div>
			<div class="col-xs-5" style="text-align:right">
				<input name="<%= request_forgery_protection_token.to_s %>" type="hidden" value="<%= form_authenticity_token %>" />
				<button type="submit" class="btn btn-success"><%= I18n.t(:nav_next) %></button>
			</div>
		</div>

	</form>

</div>


<footer class="footer" style='margin-top:40px'>
  <div class="row panel panel-footer ">
    <div class="footer-info col-xs-1"><h1><i class="fa fa-info"></i></h1></div>
    <div class="footer-info col-xs-11"><%=t @info %></div>
  </div>
</footer>

</div>
