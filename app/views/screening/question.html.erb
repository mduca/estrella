<style>
	.radio label, .checkbox label {
		font-size: 14pt;
	}

  .row-centered {
    text-align: center;
  }

  .col-centered {
    display: inline-block;
    float: none;
    text-align: left;
    margin-right: -4px;
  }

  .footer-info {
    float:none;
    display:inline-block;
    vertical-align:middle;
    margin-right:-4px;
  }

  form {
    padding-bottom: 10px;
  }

  .radio {
    padding-top: 5px;
    padding-bottom: 5px;
  }

  .question {
    padding-bottom: 10px;
  }

  .navbar-brand, img {
    padding-bottom: 25px;
    height: 75px;
  }
  body[dir=rtl] * input[type=radio]{
    margin-right: -30px;
  }
  
